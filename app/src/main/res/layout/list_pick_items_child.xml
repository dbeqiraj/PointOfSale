<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/white_input_bottom_line">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_horizontal_16dp"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:background="@drawable/white_input_right_line">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_horizontal_16dp"
            android:layout_marginEnd="@dimen/margin_horizontal_16dp"
            android:text=""/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/price"
            android:layout_toStartOf="@id/price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text=""/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_item_amount_bg"
            android:src="@mipmap/baseline_add_black_24"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_item_amount_bg"
            android:src="@mipmap/baseline_remove_black_24"
            android:contentDescription="@null"/>

    </LinearLayout>

</LinearLayout>